{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@frontend/core": ["libs/core/src/index.ts"],
      "@frontend/shared": ["libs/shared/src/index.ts"],
      "mf-auth/Module": ["apps/mf-auth/src/app/remote-entry/entry.module.ts"],
      "mf-categories/Module": [
        "apps/mf-categories/src/app/remote-entry/entry.module.ts"
      ],
      "mf-products/Module": [
        "apps/mf-products/src/app/remote-entry/entry.module.ts"
      ],
      "mf-setCompanies/Module": [
        "apps/mf-setCompanies/src/app/remote-entry/entry.module.ts"
      ],
      "mf-settings/Module": [
        "apps/mf-settings/src/app/remote-entry/entry.module.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
